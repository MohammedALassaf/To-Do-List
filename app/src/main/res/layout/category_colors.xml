<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/catgColorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_catgcolor"
        app:layout_constraintEnd_toStartOf="@+id/catgColorGray"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"

        tools:layout_editor_absoluteY="147dp" />

    <ImageView
        android:id="@+id/catgColorBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:src="@drawable/ic_catgcolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/catgColorTeal"
        app:layout_constraintTop_toBottomOf="@+id/catgColorRed"
        app:tint="@color/blue"></ImageView>

    <ImageView
        android:id="@+id/catgColorPurple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_catgcolor"
        app:layout_constraintEnd_toStartOf="@+id/catgColorTeal"
        app:layout_constraintStart_toEndOf="@+id/catgColorGreen"
        app:layout_constraintTop_toBottomOf="@+id/catgColorBlack"
        app:tint="@color/purple_500"></ImageView>

    <ImageView
        android:id="@+id/catgColorRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:src="@drawable/ic_catgcolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/catgColorMaroon"
        app:layout_constraintTop_toTopOf="@+id/catgColorGray"
        app:tint="@color/red"></ImageView>

    <ImageView
        android:id="@+id/catgColorMaroon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_catgcolor"
        app:layout_constraintEnd_toStartOf="@+id/catgColorRed"
        app:layout_constraintStart_toEndOf="@+id/catgColorGray"
        app:layout_constraintTop_toTopOf="@+id/catgColorRed"
        app:tint="@color/maroon"></ImageView>

    <ImageView
        android:id="@+id/catgColorGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_catgcolor"
        app:layout_constraintEnd_toStartOf="@+id/catgColorMaroon"
        app:layout_constraintStart_toEndOf="@+id/catgColorBlack"
        app:layout_constraintTop_toTopOf="@+id/catgColorBlack"
        app:tint="@color/gray"></ImageView>

    <ImageView
        android:id="@+id/catgColorGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_catgcolor"
        app:layout_constraintEnd_toStartOf="@+id/catgColorPurple"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/catgColorBlack"
        app:tint="@color/green"></ImageView>

    <ImageView
        android:id="@+id/catgColorTeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_catgcolor"
        app:layout_constraintEnd_toStartOf="@+id/catgColorBlue"
        app:layout_constraintStart_toEndOf="@+id/catgColorPurple"
        app:layout_constraintTop_toBottomOf="@+id/catgColorRed"
        app:tint="@color/teal_200"></ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>